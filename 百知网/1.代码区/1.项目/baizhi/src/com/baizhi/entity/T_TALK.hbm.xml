<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class entity-name="T_TALK" table="T_TALK" lazy="false">
		<comment>话题信息表</comment>
		<id name="TALK_ID" column="TALK_ID" type="int" >
			<generator class="identity" />
		</id>
		<property name="TALKTYPE_ID" type="int">
			<column name="TALKTYPE_ID"  >
				<comment>话题类型ID</comment>
			</column>
		</property>
		<property name="CONTENT" type="string">
			<column name="CONTENT" length="1000" >
				<comment>内容</comment>
			</column>
		</property>
		<property name="USER_ID" type="int">
			<column name="USER_ID"  >
				<comment>用户ID</comment>
			</column>
		</property>
		<property name="INTRODUCTION" type="string">
			<column name="INTRODUCTION" length="1000" >
				<comment>简介</comment>
			</column>
		</property>
		<property name="IMAGE_PATH" type="string">
			<column name="IMAGE_PATH" length="100"  >
				<comment>图片路径</comment>
			</column>
		</property>
		<property name="CREATE_TIME" type="java.util.Date">
			<column name="CREATE_TIME"  >
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="MODIFY_TIME" type="java.util.Date">
			<column name="MODIFY_TIME"  >
				<comment>修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>