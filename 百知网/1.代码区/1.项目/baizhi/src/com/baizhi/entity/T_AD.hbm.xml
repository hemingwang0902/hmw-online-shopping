<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class entity-name="T_AD" table="T_AD" lazy="false">
		<comment>广告信息表</comment>
		<id name="AD_ID" column="AD_ID" type="int" >
			<generator class="identity" />
		</id>
		<property name="TITLE" type="string">
			<column name="TITLE" length="50" >
				<comment>主题</comment>
			</column>
		</property>
		<property name="CONTENT" type="string">
			<column name="CONTENT" length="2000" >
				<comment>内容(支持html内容)</comment>
			</column>
		</property>
		<property name="IMAGE" type="string">
			<column name="IMAGE" length="100" >
				<comment>图片</comment>
			</column>
		</property>
		<property name="SHOW_TYPE" type="string">
			<column name="SHOW_TYPE" length="10" >
				<comment>显示方式(字典：1左边悬浮、2中间悬浮、3右边悬浮)</comment>
			</column>
		</property>
		<property name="HREF" type="string">
			<column name="HREF" length="100" >
				<comment>链接地址</comment>
			</column>
		</property>
		<property name="ORDER_BY" type="int">
			<column name="ORDER_BY"  >
				<comment>显示顺序</comment>
			</column>
		</property>
		<property name="START_TIME" type="java.util.Date">
			<column name="START_TIME"  >
				<comment>起始时间</comment>
			</column>
		</property>
		<property name="END_TIME" type="java.util.Date">
			<column name="END_TIME"  >
				<comment>终止时间</comment>
			</column>
		</property>
		<property name="STATUS" type="string">
			<column name="STATUS" length="10" >
				<comment>状态(字典：1申请、2通过、3不通过)</comment>
			</column>
		</property>
		<property name="REMARK" type="string">
			<column name="REMARK" length="1000" >
				<comment>备注</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>