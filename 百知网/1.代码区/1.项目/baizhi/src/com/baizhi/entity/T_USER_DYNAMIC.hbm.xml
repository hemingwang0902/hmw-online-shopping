<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class entity-name="T_USER_DYNAMIC" table="T_USER_DYNAMIC" lazy="false">
		<comment>用户动态信息表</comment>
		<id name="DYNAMIC_ID" column="DYNAMIC_ID" type="int" >
			<generator class="identity" />
		</id>
		<property name="USER_ID" type="int">
			<column name="USER_ID"  >
				<comment>用户ID</comment>
			</column>
		</property>
		<property name="TITLE" type="string">
			<column name="TITLE" length="100" >
				<comment>动态主题</comment>
			</column>
		</property>
		<property name="BUSINESS_ID" type="int">
			<column name="BUSINESS_ID"  >
				<comment>业务主键(回复问题ID、关注会员ID)</comment>
			</column>
		</property>
		<property name="DYNAMIC_TYPE" type="string">
			<column name="DYNAMIC_TYPE" length="10" >
				<comment>动态类型(字典：1回答问题、2关注会员)</comment>
			</column>
		</property>
		<property name="CONTENT" type="string">
			<column name="CONTENT" length="2000" >
				<comment>动态内容(存放组织好的html内容)</comment>
			</column>
		</property>
		<property name="WARN_USERID" type="int">
			<column name="WARN_USERID"  >
				<comment>提醒用户ID</comment>
			</column>
		</property>
		<property name="IS_OPEN" type="int">
			<column name="IS_OPEN"  >
				<comment>是否查看(0否、1是)</comment>
			</column>
		</property>
		<property name="CREATE_TIME" type="java.util.Date">
			<column name="CREATE_TIME"  >
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="MODIFY_TIME" type="java.util.Date">
			<column name="MODIFY_TIME"  >
				<comment>修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>