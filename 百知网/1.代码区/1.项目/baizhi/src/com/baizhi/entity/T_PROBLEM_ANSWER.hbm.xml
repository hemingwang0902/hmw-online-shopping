<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class entity-name="T_PROBLEM_ANSWER" table="T_PROBLEM_ANSWER" lazy="false">
		<comment>问题答案信息表</comment>
		<id name="ANSWER_ID" column="ANSWER_ID" type="int" >
			<generator class="identity" />
		</id>
		<property name="PROBLEM_ID" type="int">
			<column name="PROBLEM_ID"  >
				<comment>问题ID</comment>
			</column>
		</property>
		<property name="CONTENT" type="string">
			<column name="CONTENT" length="1000" >
				<comment>内容</comment>
			</column>
		</property>
		<property name="USER_ID" type="int">
			<column name="USER_ID"  >
				<comment>用户ID</comment>
			</column>
		</property>
		<property name="AGREE_COUNT" type="int">
			<column name="AGREE_COUNT"  >
				<comment>赞成数量</comment>
			</column>
		</property>
		<property name="DISAGREE_COUNT" type="int">
			<column name="DISAGREE_COUNT"  >
				<comment>反对数量</comment>
			</column>
		</property>
		<property name="THANK_COUNT" type="int">
			<column name="THANK_COUNT"  >
				<comment>感觉作者数量</comment>
			</column>
		</property>
		<property name="DISTHANK_COUNT" type="int">
			<column name="DISTHANK_COUNT"  >
				<comment>没有帮助数量</comment>
			</column>
		</property>
		<property name="CREATE_TIME" type="java.util.Date">
			<column name="CREATE_TIME"  >
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="MODIFY_TIME" type="java.util.Date">
			<column name="MODIFY_TIME"  >
				<comment>修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>