<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping>
	<class entity-name="T_USER_SCORE" table="T_USER_SCORE" lazy="false">
		<comment>用户积分明细表</comment>
		<id name="SCORE_ID" column="SCORE_ID" type="int" >
			<generator class="identity" />
		</id>
		<property name="USER_ID" type="int">
			<column name="USER_ID"  >
				<comment>用户ID</comment>
			</column>
		</property>
		<property name="BUSINESS_ID" type="int">
			<column name="BUSINESS_ID"  >
				<comment>业务主键(提问题ID、回答ID)</comment>
			</column>
		</property>
		<property name="BUSINESS_TYPE" type="string">
			<column name="BUSINESS_TYPE" length="10" >
				<comment>业务类型(字典：1、会员邀请朋友注册获得积分2、提问题3、回答问题)</comment>
			</column>
		</property>
		<property name="SCORE" type="int">
			<column name="SCORE"  >
				<comment>积分</comment>
			</column>
		</property>
		<property name="DESCRIPTION" type="string">
			<column name="DESCRIPTION" length="1000" >
				<comment>描述</comment>
			</column>
		</property>
		<property name="CREATE_TIME" type="java.util.Date">
			<column name="CREATE_TIME"  >
				<comment>创建时间</comment>
			</column>
		</property>
		<property name="MODIFY_TIME" type="java.util.Date">
			<column name="MODIFY_TIME"  >
				<comment>修改时间</comment>
			</column>
		</property>
	</class>
</hibernate-mapping>