<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="problemAnswerDao" class="com.baizhi.problemanswer.dao.ProblemAnswerDao" parent="daoSupport">
		<property name="userNoticeDao" ref="userNoticeDao"/>
		<property name="userDynamicDao" ref="userDynamicDao"/>
		<property name="userScoreDao" ref="userScoreDao"/>
	</bean>
	
	<bean id="problemAnswerService" class="com.baizhi.problemanswer.service.ProblemAnswerService" parent="serviceSupport">
		<property name="problemAnswerDao">
			<ref local="problemAnswerDao" />
		</property>
	</bean>
</beans>