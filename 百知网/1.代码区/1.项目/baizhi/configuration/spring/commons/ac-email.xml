<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans       
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<!-- 邮件发送者 -->
	<bean id="mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.sina.com"/>
		<property name="username" value="baizhi_bj" />
		<property name="password" value="baizhi" />
		<property name="javaMailProperties">
			<props>
				<!-- 如果要使用用户名和密码验证,这一步需要 -->
				<prop key="mail.smtp.auth">true</prop>
			</props>
		</property>
	</bean>

	<!-- 简单的邮件 message -->
	<bean id="simpleMailMessage" class="org.springframework.mail.SimpleMailMessage" scope="prototype">
		<property name="to" value="331008019@qq.com,532320690@qq.com" />
		<property name="from" value="baizhi_bj@sina.com" />
		<property name="subject" value="测试邮件" />
		<property name="text" value="测试 Spring 发送 Email 的功能，请勿回复！" />
	</bean>
	
	<bean id="mimeMessage" factory-bean="mailSender" factory-method="createMimeMessage"/>
	
	<bean id="mimeMessageHelper" class="org.springframework.mail.javamail.MimeMessageHelper" scope="prototype">
		<constructor-arg index="0" ref="mimeMessage" />
		<constructor-arg index="1" type="boolean" value="true"/>
		<constructor-arg index="2" type="java.lang.String" value="UTF-8"/>
		<constructor-arg index="0" ref="mimeMessage" />
		<property name="subject" value="测试发送富文本邮件(包括附件)" />
		<property name="text" value="&lt;h1&gt;测试 Spring 发送 Email 的功能，请勿回复！&lt;/h1&gt;" />
		<property name="priority" value="1" />
	</bean>
	
	<bean id="freeMarkerConfiguration" class="org.springframework.ui.freemarker.FreeMarkerConfigurationFactoryBean">
		<property name="defaultEncoding" value="UTF-8"/>
		<property name="freemarkerSettings">
			<props>
				<!-- 3600秒(1小时)检查一次模板有没有被更新 -->
				<prop key="template_update_delay">3600</prop>
			</props>
		</property>
   </bean>

	<!-- 测试发送的类 -->
	<bean id="sendEmailUtils" class="com.baizhi.commons.component.SendEmailUtils">
		<property name="mailSender" ref="mailSender" />
		<property name="simpleMailMessage" ref="simpleMailMessage" />
		<property name="mimeMessageHelper" ref="mimeMessageHelper" />
		<property name="freeMarkerConfiguration" ref="freeMarkerConfiguration" />
		<property name="templateDirectory" value="template"/>
	</bean>

</beans>   