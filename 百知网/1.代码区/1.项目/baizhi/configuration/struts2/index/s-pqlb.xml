<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="pqlb" extends="json-default" namespace="/index">
		<action name="getPqlbList" class="com.baizhi.index.action.pqlb.GetPqlbList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 跳转到“他关注的品牌”页面  -->
		<action name="initAttentionBrand" class="com.baizhi.index.action.pqlb.InitAttentionBrand">
			<result name="success" >list_wgzdpp.jsp</result>
		</action>
		<!-- 获取最新品牌列表 -->
		<action name="getLastestBrand" class="com.baizhi.index.action.pqlb.GetLastestBrand">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 获取最热品牌列表 -->
		<action name="getHottestBrand" class="com.baizhi.index.action.pqlb.GetHottestBrand">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 关注/取消关注品牌 -->
		<action name="attentionBrand" class="com.baizhi.index.action.pqlb.AttentionBrand">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>