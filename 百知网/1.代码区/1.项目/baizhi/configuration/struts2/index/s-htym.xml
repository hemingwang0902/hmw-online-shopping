<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="htym" extends="json-default" namespace="/index">
		<!-- 跳转到话题页面 -->
		<action name="initHtym" class="com.baizhi.index.action.ht.InitHtym">
			<result name="success">list_htym.jsp</result>
		</action>
		<!-- 根据话题ID查询话题下面的问题 -->
		<action name="GetProblemListByTalkId" class="com.baizhi.index.action.ht.GetProblemListByTalkId">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 修改话题介绍 -->
		<action name="updateTalk" class="com.baizhi.index.action.ht.UpdateTalk">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 跳转到话题广场页面 -->
		<action name="initHtgc" class="com.baizhi.index.action.ht.InitHtgc">
			<result name="success">htgc.jsp</result>
		</action>
	</package>
</struts>