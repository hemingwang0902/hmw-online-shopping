<struts>
	<package name="htym" extends="json-default" namespace="/index">
		<!-- 跳转到话题页面 -->
		<action name="initHtym" class="com.baizhi.index.action.ht.InitHtym">
			<result name="success">list_htym.jsp</result>
		</action>
		<!-- 根据话题ID查询话题下面的问题 -->
		<action name="GetProblemListByTalkId" class="com.baizhi.index.action.ht.GetProblemListByTalkId">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>