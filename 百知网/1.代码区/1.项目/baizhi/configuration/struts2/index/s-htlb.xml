<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="htlb" extends="json-default" namespace="/index">
		<action name="getHtlbList" class="com.baizhi.index.action.htlb.GetHtlbList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initHtlbPage" class="com.baizhi.index.action.htlb.InitHtlbPage">
			<result name="success" >list_htlb.jsp</result>
		</action>
		<!-- 根据UserId查询他关注的话题列表(关注话题 ->更多) -->
		<action name="getTalkListByUserId" class="com.baizhi.index.action.htlb.GetTalkListByUserId">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initWgzdht" class="com.baizhi.index.action.htlb.InitWgzdht">
			<result name="success" >list_wgzdht.jsp</result>
			<result name="error" >error_invalidParam.jsp</result>
		</action>
		<!-- 修改话题LOGO -->
		<action name="uploadTalkImage" class="com.baizhi.index.action.ht.UploadTalkImage">
			<result name="success" type="redirect">/index/initHtym.go?TALK_ID=${TALK_ID}</result>
		</action>
	</package>
</struts>