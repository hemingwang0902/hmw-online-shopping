<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN" "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="home" extends="json-default" namespace="/index">
		<!-- 模糊搜索用户、品牌、问题和话题 -->
		<action name="getUserOrProblemByTitleList" class="com.baizhi.index.action.home.GetUserOrProblemByTitleList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 跳转到模糊搜索用户、品牌、问题和话题的结果页 -->
		<action name="search" class="com.baizhi.index.action.home.Search">
			<result name="success">list_ssjg.jsp</result>
		</action>
		<!-- 模糊搜索用户、品牌、问题和话题（用于搜索结果页） -->
		<action name="getListByTitleWithFull" class="com.baizhi.index.action.home.GetListByTitleWithFull">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询最新问题列表 -->
		<action name="getLatestProblemList" class="com.baizhi.index.action.home.GetLatestProblemList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询最热问题列表 -->
		<action name="getHottestProblemList" class="com.baizhi.index.action.home.GetHottestProblemList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询可能感兴趣的用户(或品牌) -->
		<action name="getMayInterestedUser" class="com.baizhi.index.action.home.GetMayInterestedUser">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询关注的用户 -->
		<action name="getAttentionUser" class="com.baizhi.index.action.home.GetAttentionUser">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询关注的品牌 -->
		<action name="getAttentionBrand" class="com.baizhi.index.action.home.GetAttentionBrand">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 关注问题 -->
		<action name="attentionProblem" class="com.baizhi.index.action.home.AttentionProblem">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 收藏问题 -->
		<action name="collectionProblem" class="com.baizhi.index.action.home.CollectionProblem">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 邀请注册(发送邮件) -->
		<action name="sendInviteEmail" class="com.baizhi.index.action.home.SendInviteEmail">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 查询广告 -->
		<action name="getAdByPosition" class="com.baizhi.index.action.home.GetAdByPosition">
			<result name="success">../popAd.jsp</result>
		</action>
	</package>
</struts>