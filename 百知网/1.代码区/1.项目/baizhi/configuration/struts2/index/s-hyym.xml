<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="hyym" extends="json-default" namespace="/index">
		<!-- 跳转到会员页面 -->
		<action name="initHyym" class="com.baizhi.index.action.hyym.InitHyym">
			<result name="success">list_hyym.jsp</result>
		</action>
		<!-- 根据会员ID查询他问过的问题 -->
		<action name="getProblemListByUserId" class="com.baizhi.index.action.hyym.GetProblemListByUserId">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 根据会员ID查询他回答过的问题 -->
		<action name="getAnsweredProblemList" class="com.baizhi.index.action.hyym.GetAnsweredProblemList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 根据姓名模糊查询会员列表 -->
		<action name="getUserListByName" class="com.baizhi.index.action.hyym.GetUserListByName">
			<result name="success">list_hyssjg.jsp</result>
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 根据用户ID查询关注的话题列表 -->
		<action name="getAttentionTalkList" class="com.baizhi.index.action.hyym.GetAttentionTalkList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 根据用户ID查询用户信息 -->
		<action name="getUserBasicByUserId" class="com.baizhi.index.action.hyym.GetUserBasicByUserId">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 关注/取消关注 用户 -->
		<action name="attentionUser" class="com.baizhi.index.action.hyym.AttentionUser">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<!-- 关注/取消关注 话题 -->
		<action name="attentionTalk" class="com.baizhi.index.action.hyym.AttentionTalk">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>