<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="problemcollection" extends="json-default" namespace="/problemcollection">
		<action name="getProblemCollectionList" class="com.baizhi.problemcollection.action.GetProblemCollectionList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initProblemCollectionForm" class="com.baizhi.problemcollection.action.InitProblemCollectionForm">
			<result name="success" type="dispatcher">problemcollectionform.jsp</result>
		</action>
		<action name="saveProblemCollection" class="com.baizhi.problemcollection.action.SaveProblemCollection">
			<result name="error"  type="dispatcher" >problemcollectionform.jsp</result>
			<result name="success" type="redirect" >problemcollectionlist.jsp</result>
			<result name="update" type="dispatcher" >problemcollectionform.jsp</result>
			<result name="invalid.token" type="freemarker">problemcollectionform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delProblemCollection" class="com.baizhi.problemcollection.action.DelProblemCollection">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getProblemCollectionById" class="com.baizhi.problemcollection.action.GetProblemCollectionById">
			<result name="success" type="dispatcher" >problemcollectionform.jsp</result>
		</action>
	</package>
</struts>