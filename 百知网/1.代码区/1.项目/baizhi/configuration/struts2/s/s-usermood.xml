<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="usermood" extends="json-default" namespace="/usermood">
		<action name="getUserMoodList" class="com.baizhi.usermood.action.GetUserMoodList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initUserMoodForm" class="com.baizhi.usermood.action.InitUserMoodForm">
			<result name="success" type="dispatcher">usermoodform.jsp</result>
		</action>
		<action name="saveUserMood" class="com.baizhi.usermood.action.SaveUserMood">
			<result name="error"  type="dispatcher" >usermoodform.jsp</result>
			<result name="success" type="redirect" >usermoodlist.jsp</result>
			<result name="update" type="dispatcher" >usermoodform.jsp</result>
			<result name="invalid.token" type="freemarker">usermoodform.jsp</result> 
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result> 
			<!--<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>-->
		</action>
		<action name="delUserMood" class="com.baizhi.usermood.action.DelUserMood">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getUserMoodById" class="com.baizhi.usermood.action.GetUserMoodById">
			<result name="success" type="dispatcher" >usermoodform.jsp</result>
		</action>
	</package>
</struts>