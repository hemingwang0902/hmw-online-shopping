<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="scorelevel" extends="json-default" namespace="/scorelevel">
		<action name="getScoreLevelList" class="com.baizhi.scorelevel.action.GetScoreLevelList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initScoreLevelForm" class="com.baizhi.scorelevel.action.InitScoreLevelForm">
			<result name="success" type="dispatcher">scorelevelform.jsp</result>
		</action>
		<action name="saveScoreLevel" class="com.baizhi.scorelevel.action.SaveScoreLevel">
			<result name="error"  type="dispatcher" >scorelevelform.jsp</result>
			<result name="success" type="redirect" >scorelevellist.jsp</result>
			<result name="update" type="dispatcher" >scorelevelform.jsp</result>
			<result name="invalid.token" type="freemarker">scorelevelform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delScoreLevel" class="com.baizhi.scorelevel.action.DelScoreLevel">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getScoreLevelById" class="com.baizhi.scorelevel.action.GetScoreLevelById">
			<result name="success" type="dispatcher" >scorelevelform.jsp</result>
		</action>
	</package>
</struts>