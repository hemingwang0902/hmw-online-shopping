<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="dicitem" extends="json-default" namespace="/dicitem">
		<action name="getDicitemList" class="com.baizhi.dicitem.action.GetDicitemList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		
		<action name="getDicitemByKeyword" class="com.baizhi.dicitem.action.GetDicitemByKeyword">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		
		<action name="initDicitemForm" class="com.baizhi.dicitem.action.InitDicitemForm">
			<result name="success" type="dispatcher">dicitemform.jsp</result>
		</action>
		<action name="saveDicitem" class="com.baizhi.dicitem.action.SaveDicitem">
			<result name="error"  type="dispatcher" >dicitemform.jsp</result>
			<result name="success" type="dispatcher" >dicitemform.jsp</result>
			<result name="update" type="dispatcher" >dicitemform.jsp</result>
			<result name="invalid.token" type="freemarker">dicitemform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delDicitem" class="com.baizhi.dicitem.action.DelDicitem">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getDicitemById" class="com.baizhi.dicitem.action.GetDicitemById">
			<result name="success" type="dispatcher" >dicitemform.jsp</result>
		</action>
		<action name="checkCode" class="com.baizhi.dicitem.action.CheckCode">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		
		<action name="getPinyin" class="com.baizhi.dicitem.action.GetPinyin">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		
		<action name="getDicitemByCode" class="com.baizhi.dicitem.action.GetDicitemByCode">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>