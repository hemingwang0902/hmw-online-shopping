<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="user" extends="json-default" namespace="/user">
		<action name="getUserList" class="com.baizhi.user.action.GetUserList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initUserForm" class="com.baizhi.user.action.InitUserForm">
			<result name="success" type="dispatcher" >userform.jsp</result>
		</action>
		<action name="saveUser" class="com.baizhi.user.action.SaveUser">
			<result name="error"  type="dispatcher" >userform.jsp</result>
			<result name="success" type="redirect" >userlist.jsp</result>
			<result name="update" type="dispatcher" >userform.jsp</result>
			<result name="invalid.token" type="freemarker">userform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delUser" class="com.baizhi.user.action.DelUser">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getUserById" class="com.baizhi.user.action.GetUserById">
			<result name="success" type="dispatcher" >userform.jsp</result>
		</action>
		<action name="checkEmail" class="com.baizhi.user.action.CheckEmail">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>