<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="area" extends="json-default" namespace="/area">
		<action name="getAreaList" class="com.baizhi.area.action.GetAreaList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initAreaForm" class="com.baizhi.area.action.InitAreaForm">
			<!-- 省份 -->
			<result name="success1" type="dispatcher">provinceform.jsp</result>
			<!-- 城市 -->
			<result name="success2" type="dispatcher">cityform.jsp</result>
		</action>
		<action name="saveArea" class="com.baizhi.area.action.SaveArea">
			<!-- 省份 -->
			<result name="error1"  type="dispatcher" >provinceform.jsp</result>
			<result name="success1" type="redirect" >provincelist.jsp</result>
			<result name="update1" type="dispatcher" >provinceform.jsp</result>
			<!-- 城市 -->
			<result name="error2"  type="dispatcher" >cityform.jsp</result>
			<result name="success2" type="redirect" >citylist.jsp?PAREA_ID=${PAREA_ID}</result>
			<result name="update2" type="dispatcher" >cityform.jsp</result>
			<result name="invalid.token" type="freemarker">cityform.jsp</result>
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delArea" class="com.baizhi.area.action.DelArea">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getAreaById" class="com.baizhi.area.action.GetAreaById">
			<!-- 省份 -->
			<result name="success1" type="dispatcher">provinceform.jsp</result>
			<!-- 城市 -->
			<result name="success2" type="dispatcher">cityform.jsp</result>
		</action>
	</package>
</struts>