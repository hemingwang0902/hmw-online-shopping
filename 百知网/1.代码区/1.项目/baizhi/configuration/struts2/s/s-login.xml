<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="login" extends="json-default" namespace="">
		<action name="login" class="com.baizhi.user.action.Login">
			<result name="error"  type="dispatcher" >login.jsp</result>
			<result name="success" type="redirect" >index.jsp</result>
			<result name="index" type="redirect" >index/home.jsp</result>
			<result name="blank">blank.jsp</result>
		</action>
		<action name="destroy" class="com.baizhi.user.action.Destroy">
			<result name="success" type="redirect" >login.jsp</result> 
		</action>
		<action name="forget" class="com.baizhi.user.action.Forget">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="forgetPassword" class="com.baizhi.user.action.ForgetPassword">
			<result name="success" >password.jsp</result> 
			<result name="error" >forgeterror.jsp</result> 
		</action>
		<action name="password" class="com.baizhi.user.action.Password">
			<result name="success" >login.jsp</result> 
			<result name="error">forgeterror.jsp</result> 
		</action>
		<action name="isEmail" class="com.baizhi.user.action.IsEmail">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="regiest" class="com.baizhi.user.action.Regiest">
			<result name="success" type="redirect" >index/home.jsp</result>
			<result name="error" type="dispatcher" >regiest.jsp</result>
		</action>
		<action name="changeCity" class="com.baizhi.user.action.ChangeCity">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="ajaxRequest" class="com.baizhi.user.action.AjaxRequest">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
	</package>
</struts>