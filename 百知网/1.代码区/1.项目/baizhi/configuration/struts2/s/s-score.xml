<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="score" extends="json-default" namespace="/score">
		<action name="getScoreList" class="com.baizhi.score.action.GetScoreList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initScoreForm" class="com.baizhi.score.action.InitScoreForm">
			<result name="success" type="dispatcher">scoreform.jsp</result>
		</action>
		<action name="saveScore" class="com.baizhi.score.action.SaveScore">
			<result name="error"  type="dispatcher" >scoreform.jsp</result>
			<result name="success" type="redirect" >scorelist.jsp</result>
			<result name="update" type="dispatcher" >scoreform.jsp</result>
			<result name="invalid.token" type="freemarker">scoreform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delScore" class="com.baizhi.score.action.DelScore">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getScoreById" class="com.baizhi.score.action.GetScoreById">
			<result name="success" type="dispatcher" >scoreform.jsp</result>
		</action>
	</package>
</struts>