<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="userinvite" extends="json-default" namespace="/userinvite">
		<action name="getUserInviteList" class="com.baizhi.userinvite.action.GetUserInviteList">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="initUserInviteForm" class="com.baizhi.userinvite.action.InitUserInviteForm">
			<result name="success" type="dispatcher">userinviteform.jsp</result>
		</action>
		<action name="saveUserInvite" class="com.baizhi.userinvite.action.SaveUserInvite">
			<result name="error"  type="dispatcher" >userinviteform.jsp</result>
			<result name="success" type="redirect" >userinvitelist.jsp</result>
			<result name="update" type="dispatcher" >userinviteform.jsp</result>
			<result name="invalid.token" type="freemarker">userinviteform.jsp</result> 
			<interceptor-ref name="defaultStack"><param name="workflow.excludeMethods">default</param></interceptor-ref> 
			<interceptor-ref name="tokenSession"><param name="excludeMethods">default</param></interceptor-ref>
		</action>
		<action name="delUserInvite" class="com.baizhi.userinvite.action.DelUserInvite">
			<result name="jsonsuccess" type="json">
		      <param name="root">result</param>
		    </result>
		</action>
		<action name="getUserInviteById" class="com.baizhi.userinvite.action.GetUserInviteById">
			<result name="success" type="dispatcher" >userinviteform.jsp</result>
		</action>
	</package>
</struts>